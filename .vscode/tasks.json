{
   "version": "2.0.0",
   "tasks": [
       {
           "type": "shell",
           "label": "LC3: Assemble current file",
           "command": "${config:lc3.assemblerPath}",
           "args": [
               "-a",
               "${file}"
           ],
           "problemMatcher": [],
           "group": {
               "kind": "build",
               "isDefault": true
           }
       },
       {
           "type": "shell",
           "label": "LC3: Run current file",
           "command": "${config:lc3.simulatorPath}",
           "args": [
               "-s",
               "${fileDirname}/${fileBasenameNoExtension}.obj"
           ],
           "problemMatcher": [],
           "group": {
               "kind": "test",
               "isDefault": true
           }
       },
       {
           "type": "shell",
           "label": "LC3: Assemble and Run current file",
           "dependsOrder": "sequence",
           "dependsOn": [
               "LC3: Assemble current file",
               "LC3: Run current file"
           ],
           "problemMatcher": []
       }
   ]
}